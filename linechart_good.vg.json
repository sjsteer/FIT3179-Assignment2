{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "title": {"text": "Global Solar Capacity per capita", "fontSize": 18},
  "data": {"url": "data/per-capita-solar.csv"},
  "transform": [{"filter": "datum.Entity == 'Australia' || datum.Entity == 'United States' || datum.Entity == 'Spain' || datum.Entity == 'China' || datum.Entity == 'Portugal' || datum.Entity == 'India' || datum.Entity == 'New Zealand'"}],
  "encoding": {
    "x": {"field": "year", "type": "temporal", "title": "date"},
    "y": {"field": "Solar per capita (kWh)", "type": "quantitative",
    "color": {
      "condition": {
        "param": "hover",
        "field":"Entity",
        "type":"nominal",
        "legend": null
      },
      "value": "grey"
    },
    "opacity": {
      "condition": {
        "param": "hover",
        "value": 1
      },
      "value": 0.2
    }
  },
  "layer": [{
    "params": [{
      "name": "hover",
      "value": [{"Entity": "Australia"}],
      "select": {
        "type": "point",
        "fields": ["Entity"],
        "on": "mouseover"
      }
    }],
    "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
  }, {
    "mark": "line"
  }, {
    "encoding": {
      "x": {"aggregate": "max", "field": "Year"},
      "y": {"aggregate": {"argmax": "Year"}, "field": "Solar per capita (kWh)"}
    },
    "layer": [{
      "mark": {"type": "circle"}
    }, {
      "mark": {"type": "text", "align": "left", "dx": 4},
      "encoding": {"text": {"field":"Entity", "type": "nominal"}}
    }]
  }],
  "config": {"view": {"stroke": null}}
}