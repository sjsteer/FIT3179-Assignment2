{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "height": 400,
    "data": {"url": "data/national_fuel_mix_12mo.csv"},
    "mark": "bar",
    "params": [{
        "name": "State_Select",
        "bind": {
            "input": "select",
            "options": [
                null,
                "NSW",
                "QLD",
                "SA",
                "TAS",
                "VIC"
            ],
            "labels":[
                "All",
                "New South Wales",
                "Queensland",
                "South Australia",
                "Tasmania",
                "Victoria"
            ],
            "name": "Select a state: "
        }
    }],
    "transform": [
        {"filter": "State_Select == null || datum.State == State_Select"}
        {"window": [
                {"op": "sum", "field": "Supply", "as": "TotalSupply"}
            ], 
            "frame": [null, null]
        },
        {"calculate": "datum.Supply/datum.TotalSupply*100", "as": "PercentTotal"}
    ],
    "encoding":{
        "x": {
            "field": "Fuel Type", 
            "type": "nominal"
        },
        "y": {
            "field": "PercentTotal", 
            "type": "quantitative"
        },
        "color": {
            "field": "Fuel Type"
        }
    }
}