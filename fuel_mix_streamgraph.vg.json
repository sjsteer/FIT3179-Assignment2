{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "data/national_fuel_mix_12mo.csv"},
    "mark": "area",
    "width": 400,
    "title": {"text": "National Electricity Fuel Mix Breakdown", "fontSize": 18},
    "params": [{
        "name": "State_Select",
        "bind": {
            "input": "select",
            "options": [
                null,
                "VIC",
                "NSW",
                "QLD",
                "TAS",
                "SA"
            ],
            "labels": [
                "All",
                "Victoria",
                "New South Wales",
                "Queensland",
                "Tasmania",
                "South Australia"
            ],
            "name": "Select a State: "
        }
    }],
    "transform": [
        {"filter": "State_Select == null || datum.State == State_Select"},
        {"calculate": "timeParse(datum['DateTime'], '%e/%m/%Y %H:%M')", "as": "date"}
    ],
    "encoding": {
        "x": {
          "timeUnit": "yearmonth", "field": "date",
          "axis": {"domain": false, "format": "%Y-%m", "tickSize": 0}
        },
        "y": {
          "aggregate": "sum", 
          "field": "Supply",
          "title": "Total Supply (MW)",
          "stack": "center",
          "axis": null
        },
        "color": {
            "field":"Fuel Type", 
            "scale": {"scheme": "category20"}
        },
        "tooltip": [
            {"field": "Fuel Type"},
            {"field": "date", "timeUnit": "yearmonth", "title": "Month/Year"},
            {"field": "Supply", "aggregate": "sum", "title": "Total Supply (MW)", "format": ",.0f"}
        ]
    }
  }